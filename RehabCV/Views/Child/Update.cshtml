@model RehabCV.ViewModels.ChildViewModel
@{
    ViewData["Title"] = "Змінити дані";
}

@await Html.PartialAsync("_IndexHeader")

<div class="row">
    <div class="col-md-4" style="margin: auto">
        <h2 style="text-align: center">@ViewData["Title"]</h2>
        <form method="post" asp-controller="Child" asp-action="Update" id="child">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstNameOfChild"></label>
                <input asp-for="FirstNameOfChild" class="form-control" />
                <span asp-validation-for="FirstNameOfChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleNameOfChild"></label>
                <input asp-for="MiddleNameOfChild" class="form-control" />
                <span asp-validation-for="MiddleNameOfChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameOfChild"></label>
                <input asp-for="LastNameOfChild" class="form-control" />
                <span asp-validation-for="LastNameOfChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayOfChild"></label>
                <input asp-for="BirthdayOfChild" class="form-control" />
                <span asp-validation-for="BirthdayOfChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseId"></label>
                <select name="DiseaseId" id="DiseaseId" form="child" class="custom-select" asp-items="ViewBag.diseases">
                </select>
                <span asp-validation-for="DiseaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeAddress"></label>
                <input asp-for="HomeAddress" class="form-control" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" style="width: 100%" />
            </div>
        </form>
        <a asp-action="Index">Назад до списку</a>
    </div>
</div>

@await Html.PartialAsync("_IndexFooter")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
