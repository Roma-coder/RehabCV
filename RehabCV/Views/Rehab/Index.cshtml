@model IEnumerable<RehabCV.ViewModels.RehabViewModel>

@{ ViewData["Title"] = "Реабілітація"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="text-align: center">@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstNameOfChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleNameOfChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastNameOfChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOfDisease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRehab)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCommission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstNameOfChild) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleNameOfChild)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastNameOfChild)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfDisease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRehab)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfCommission)
                </td>
            </tr>
         }
    </tbody>
</table>

@await Html.PartialAsync("_IndexFooter")