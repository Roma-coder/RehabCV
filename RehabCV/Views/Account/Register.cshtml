@model RehabCV.ViewModels.RegisterViewModel
@{ ViewData["Title"] = "Реєстрація"; }

@await Html.PartialAsync("_IndexHeader")

<div class="row">
    <div class="col-md-4" style="margin: auto">
        <h2 style="text-align: center">@ViewData["Title"]</h2>
        <form method="post" asp-controller="Account" asp-action="Register" autocomplete="off">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstNameOfUser"></label>
                <input asp-for="FirstNameOfUser" class="form-control" />
                <span asp-validation-for="FirstNameOfUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleNameOfUser"></label>
                <input asp-for="MiddleNameOfUser" class="form-control" />
                <span asp-validation-for="MiddleNameOfUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameOfUser"></label>
                <input asp-for="LastNameOfUser" class="form-control" />
                <span asp-validation-for="LastNameOfUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor"></label>
                <input asp-for="Doctor" type="checkbox" id="doctor" onclick="checkDoctor()" />
            </div>
            <div class="form-group">
                <label asp-for="Parent"></label>
                <input asp-for="Parent" type="checkbox" />
            </div>
            <div class="form-group" id="specialization" style="display:none">
                <label asp-for="Specialization"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%">Зареєструватись</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_IndexFooter")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        function checkDoctor() {
            var checkBox = document.getElementById("doctor");
            var spec = document.getElementById("specialization");
            if (checkBox.checked == true) {
                spec.style.display = "block";
            } else {
                spec.style.display = "none";
            }
        }
    </script>
}

