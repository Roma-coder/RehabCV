@model IEnumerable<RehabCV.ViewModels.ReservViewModel>

@{ ViewData["Title"] = "Діти в резерві"; }

@await Html.PartialAsync("_IndexHeader")

<h2 style="text-align: center">@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOfDisease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRehab)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfReserv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfDisease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRehab)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfReserv)
                </td>
            </tr>
         }
    </tbody>
</table>

@await Html.PartialAsync("_IndexFooter")